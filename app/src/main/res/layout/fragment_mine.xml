<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="MineBinding">
        <import type="android.view.View"/>
        <variable
                name="userInfo"
                type="com.example.basetemplate.main.ui.mine.MineViewModel"/>

    </data>

    <ScrollView
            android:scrollbars="none"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:gravity="center">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_name"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="氏名"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tip_name"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_name"
                            android:textSize="6sp"
                            tools:ignore="SmallSp"
                            android:textColor="@color/text_inputLin_error"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:background="@drawable/selector_inputlin"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="7dp"
                            android:paddingStart="11dp"
                            android:paddingEnd="7dp"
                            android:hint="はいばら あい"
                            android:ems="10"
                            android:id="@+id/edit_name"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_first"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:text="氏名の入力は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_name"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginEnd="7dp" android:visibility="invisible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_petname"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="フリガナ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tip_petname"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_petname"
                            android:textSize="6sp"
                            tools:ignore="SmallSp" android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:background="@drawable/selector_inputlin"
                            android:paddingEnd="7dp"
                            android:paddingStart="11dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="7dp"
                            android:hint="みやの しほ"
                            android:ems="10"
                            android:id="@+id/edit_petname"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_first"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:text="フリガナの入力は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_petname"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp"
                            android:layout_marginEnd="7dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_date"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="生年月日"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tip_date"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_date"
                            android:textSize="6sp"
                            tools:ignore="SmallSp" android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rect_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:hint="2018年9月20日"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_inputlin"
                            android:focusable="true"
                            android:clickable="true"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="14dp"
                            android:paddingEnd="7dp"
                            android:paddingStart="11dp"
                            android:id="@+id/tv_date"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights"
                            android:textColor="@color/text_first"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:focusable="true"
                            android:id="@+id/btndatedown"
                            android:layout_weight="0"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="14dp"
                            app:layout_constraintEnd_toEndOf="@+id/tv_date"
                            android:layout_marginRight="14dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@drawable/selector_arrow"/>
                    <TextView
                            android:text="生年月日の選択は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_date"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_sex"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="性别"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tip_sex"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_sex"
                            android:textSize="6sp"
                            tools:ignore="SmallSp"
                            android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <com.example.common.widget.SexBox
                        android:id="@+id/sexbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1">

                </com.example.common.widget.SexBox>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_tel"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="電話番号"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_tel"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_tel"
                            android:textSize="6sp"
                            tools:ignore="SmallSp"
                            android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="7dp"
                            android:background="@drawable/selector_inputlin"
                            android:inputType="number|phone"
                            android:maxLength="18"
                            android:hint="09000000000"
                            android:ems="10"
                            android:id="@+id/edit_tel"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_first"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                            android:text="電話番号の入力は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_tel"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp" android:layout_marginEnd="7dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="7dp" android:layout_marginBottom="4dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_email"
                    android:gravity="center">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="メールアドレス"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_email"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_email"
                            android:textSize="6sp"
                            tools:ignore="SmallSp"
                            android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789abcdefghijklmnopqrstuvwxyz.@"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="7dp"
                            android:background="@drawable/selector_inputlin"
                            android:inputType="text|textEmailAddress"
                            android:hint="fenrir@fenrir-inc.com.cn"
                            android:ems="10"
                            android:id="@+id/edit_email"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_first"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:paddingStart="11dp"
                            android:paddingEnd="7dp"/>
                    <TextView
                            android:text="メールアドレスの入力は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_email"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp" android:layout_marginEnd="7dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="7dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="4dp" android:visibility="invisible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_work"
                    android:gravity="center">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="現在の職業"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tip_work"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_work"
                            android:textSize="6sp"
                            tools:ignore="SmallSp"
                            android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rect_work"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                    <TextView
                            android:id="@+id/tv_work"
                            android:hint="その他"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:clickable="true"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:background="@drawable/selector_inputlin"
                            android:paddingLeft="11dp"
                            android:paddingRight="14dp"
                            android:paddingEnd="7dp"
                            android:paddingStart="11dp"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights"
                            android:textColor="@color/text_first"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:id="@+id/btnjobdown"
                            android:focusable="true"
                            android:layout_weight="0"
                            android:src="@drawable/selector_arrow"
                            app:layout_constraintEnd_toEndOf="@+id/tv_work"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginRight="14dp"
                            android:layout_marginEnd="14dp"
                            app:srcCompat="@drawable/icn_chevron_down_gay"/>

                    <TextView
                            android:text="現在の職業の選択は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_job"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp" android:layout_marginEnd="7dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="7dp" android:layout_marginBottom="4dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/lin_city"
                    android:gravity="center">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="4">
                    <TextView
                            android:text="住所"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tip_city"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                    <TextView
                            android:text="(必须)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/tv_must_city"
                            android:textSize="6sp"
                            tools:ignore="SmallSp"
                            android:textColor="@color/text_inputLin_error"
                            android:layout_weight="0"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rect_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1" android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_city"
                            android:hint="東京都"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:clickable="true"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="14dp"
                            android:paddingEnd="7dp"
                            android:paddingStart="11dp"
                            android:background="@drawable/selector_inputlin"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights"
                            android:textColor="@color/text_first"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:id="@+id/btncitydown"
                            android:src="@drawable/selector_arrow"
                            android:focusable="true"
                            android:layout_weight="0"
                            app:layout_constraintEnd_toEndOf="@+id/tv_city"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/icn_chevron_down_gay"/>

                    <TextView
                            android:text="住所の選択は必須です"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_inputLin_error"
                            android:id="@+id/error_city"
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:textSize="6sp" android:layout_marginEnd="7dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="7dp" android:layout_marginBottom="4dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/lin_address"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="center">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:focusable="true">

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/view"
                            android:layout_weight="4"
                            tools:ignore="NestedWeights"/>
                    <EditText
                            android:id="@+id/edit_road"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="中央区銀座10-20"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textSize="14sp"
                            android:paddingLeft="11dp"
                            android:paddingRight="7dp"
                            android:paddingEnd="7dp"
                            android:paddingStart="11dp"
                            android:background="@drawable/selector_inputlin"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights"
                            android:textColor="@color/text_first"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:id="@+id/lin_remark"
                    android:gravity="center">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                    <TextView
                            android:text="補足"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"

                            android:id="@+id/tip_remark"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:layout_weight="0"
                            tools:ignore="NestedWeights,SmallSp"
                            android:textColor="@color/colorAccent"/>
                </LinearLayout>


                <EditText
                        android:id="@+id/edit_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:paddingTop="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="6dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="11dp"
                        android:paddingRight="7dp"
                        android:paddingEnd="7dp"
                        android:paddingStart="11dp"
                        android:background="@drawable/selector_inputlin"
                        android:hint="情報を補足する。情報を補足する。 情報を補足する。 情報を補足する。"
                        android:ems="10"
                        android:textSize="14sp"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:textColor="@color/text_first"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorAccent"
                    app:cardCornerRadius="22dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardElevation="3dp">
                <TextView
                        android:text="応募"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:gravity="center"
                        android:id="@+id/btn_submit"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>
